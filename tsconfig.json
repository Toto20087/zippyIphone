{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,        // Permite archivos JavaScript
    "checkJs": false        // Desactiva la verificaci√≥n de tipo en archivos JavaScript
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
